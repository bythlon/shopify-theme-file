{{ 'double-image-with-text.css' | asset_url | stylesheet_tag }}

{%- style -%}

  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top_mobile }}px;
    padding-bottom: {{ section.settings.padding_bottom_mobile }}px;
  }
  #shopify-section-{{ section.id }} .image-with-text__content img {
      width: 23.0rem;
  }
  #shopify-section-{{ section.id }} .image-with-text__content img + p.image-with-text__text--caption {
      margin-top: 1rem !important;
      letter-spacing: 0px;
  }
  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
    .image-with-text__content .image-with-text__text+.button {
        margin-top: 2.2rem !important;
    }
    #shopify-section-{{ section.id }} .button + .button {
      margin-top: 2.2rem !important;
      margin-left: 1rem;
      padding-left: 1rem;
    }
  }
  @media screen and (max-width: 749px) {
    #shopify-section-{{ section.id }} .button + .button {
      margin-top: 0.8rem !important;
      justify-content: space-between;
      padding-left: 1rem;
    }
  }

{%- endstyle -%}
<style>
  .image-with-text__text--caption {
    font-size: 2.2rem;
    padding-right: 20px;
}
  .image-with-text__text.rte {
    font-size: 2.4rem;
    line-height: 1.2;
  }
  .image-with-text__content>*+* {
    margin-top: 1.5rem !important;
  }
  @media screen and (min-width: 750px) {

    #shopify-section-{{ section.id }} .image-with-text__text-item.grid__item {
      width: calc(44% - var(--grid-desktop-horizontal-spacing) / 2);
    }
    .image-with-text__text.rte {
      font-size: 3.2rem;
    }
    #shopify-section-{{ section.id }} .image-with-text__content {
      padding: 6rem 13rem 7rem 0;
    }
    #shopify-section-{{ section.id }} .image-with-text__heading {
      font-size: calc(var(--font-heading-scale) * 10rem);
      font-weight: 400;
      line-height: 1;
    }
  }
  @media screen and (max-width: 749px) {
    #shopify-section-{{ section.id }} .image-with-text__media-item {
      order: 1;
    }
    .image-with-text__content>*+* {
        margin-top: 3.8rem !important;
        margin-bottom: 0 !important;
    }
    #shopify-section-{{ section.id }} .inline-richtext {
      font-size: calc(var(--font-heading-scale) * 5.2rem);
      margin-bottom: 3.8rem;
      line-height: 5.3rem;
      padding-right: 20px;
      font-weight: 400;
    }
    {% if section.settings.hide_images_mobile %}
    #shopify-section-{{ section.id }} .image-with-text__media-item {
          display: none;
      }
    {% endif %}
  }
/* Custom */
/* Image Fit */

#shopify-section-{{ section.id }} .media > img {
  object-fit: contain;
  object-position: top center;
}
/* 
#shopify-section-{{ section.id }} {
  overflow: hidden;
}
*/
#shopify-section-{{ section.id }} .image-with-text__media {
  min-height: auto;
}
#shopify-section-{{ section.id }} .image-with-text__media-item
    .image-with-text__media
    + .image-with-text__media {
      margin-top: 3rem;
      min-height: auto;
  }
  #shopify-section-{{ section.id }}  .image-with-text__media.first-image img {
  visibility: hidden;
}
#shopify-section-{{ section.id }}  .image-with-text__media.first-image img + img {
  visibility: visible;
}
{% if section.settings.hide_second_image %}
  #shopify-section-{{ section.id }}  .image-with-text__media.second-image img {
    visibility: hidden;
  }
{% endif %}
@media screen and (min-width: 990px) {
  #shopify-section-{{ section.id }}  .image-with-text__media.first-image img {
    visibility: visible;
  }
  #shopify-section-{{ section.id }}  .image-with-text__media.first-image img + img {
  visibility: hidden;
}
  #shopify-section-{{ section.id }} .image-with-text__media {
    max-width: 85%;
  }
  #shopify-section-{{ section.id }} .image-with-text__media-item
    .image-with-text__media
    + .image-with-text__media {
      margin-top: 3rem;
  }
}

/* Custom End*/
  {% if section.settings.use_custom_width %}
    @media screen and (min-width: 750px) {
      #shopify-section-{{ section.id }} .image-with-text__media-item.grid__item {
        width: calc({{ section.settings.media_grid_width }}% - var(--grid-desktop-horizontal-spacing) / 2);
      }
      #shopify-section-{{ section.id }} .image-with-text__text-item.grid__item {
        width: calc({{ section.settings.text_grid_width }}% - var(--grid-desktop-horizontal-spacing) / 2);
      }
    }
  {% endif %}

</style>

{% assign scheme1 = settings.color_schemes | first %}
<div class="double-image-with-text-wrapper image-with-text-wrapper gradient color-{{ section.settings.color_scheme }}">

<div class="image-with-text image-with-text--{{ section.settings.content_layout }} page-width isolate{% if settings.text_boxes_border_thickness > 0 and settings.text_boxes_border_opacity > 0 and settings.media_border_thickness > 0 and settings.media_border_opacity > 0 %} collapse-borders{% endif %}{% unless section.settings.color_scheme == scheme1 and settings.media_border_thickness > 0 and settings.text_boxes_shadow_opacity == 0 and settings.text_boxes_border_thickness == 0 or settings.text_boxes_border_opacity == 0 %} collapse-corners{% endunless %} section-{{ section.id }}-padding{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
  <div class="image-with-text__grid grid grid--gapless grid--1-col grid--{% if section.settings.desktop_image_width == 'medium' %}2-col-tablet{% else %}3-col-tablet{% endif %}{% if section.settings.layout == 'text_first' %} image-with-text__grid--reverse{% endif %}">
    <div class="image-with-text__media-item image-with-text__media-item--{{ section.settings.desktop_image_width }} image-with-text__media-item--{{ section.settings.desktop_content_position }} grid__item">
      <div
        class="image-with-text__media first-image image-with-text__media--{{ section.settings.height }} global-media-settings {% if section.settings.image != blank %}media{% else %}image-with-text__media--placeholder placeholder{% endif %}{% if section.settings.image_behavior != 'none' %} animate--{{ section.settings.image_behavior }}{% endif %}"
        {% if section.settings.height == 'adapt' and section.settings.image != blank %}
          style="padding-bottom: {{ 1 | divided_by: section.settings.image.aspect_ratio | times: 100 }}%;"
        {% endif %}
      >
        {%- if section.settings.image != blank -%}
          {%- if section.settings.image_behavior == 'ambient' or section.settings.image_behavior == 'zoom-in' -%}
            {%- assign widths = '198, 432, 642, 900, 1284, 1800' -%}
            {%- capture sizes -%}
              (min-width: {{ settings.page_width }}px) {{ settings.page_width | minus: 100 | divided_by: 1.6667 }}px,
              (min-width: 750px) calc((100vw - 130px) / 1.667), calc((100vw - 50px) / 1.667)
            {%- endcapture -%}
          {%- else -%}
            {%- assign widths = '165, 360, 535, 750, 1070, 1500' -%}
            {%- capture sizes -%}
              (min-width: {{ settings.page_width }}px) {{ settings.page_width | minus: 100 | divided_by: 2 }}px,
              (min-width: 750px) calc((100vw - 130px) / 2), calc((100vw - 50px) / 2)
            {%- endcapture -%}
          {%- endif -%}
          {{
            section.settings.image
            | image_url: width: 1500
            | image_tag: loading: 'lazy', sizes: sizes, widths: widths
          }}
          {%- if section.settings.image_mobile != blank -%}
            {{
              section.settings.image_mobile
              | image_url: width: 1500
              | image_tag: loading: 'lazy', sizes: sizes, widths: widths
            }}
          {%- endif -%}
        {%- else -%}
          {{ 'detailed-apparel-1' | placeholder_svg_tag: 'placeholder-svg' }}
        {%- endif -%}
        {% for block in section.blocks %}
          {% case block.type %}
            {% when 'first-image-tooltip' %}
            <div class="styles">
              <style>
                .tooltip-{{ block.id }} {
                    top: {{ block.settings.tooltip_position_y }}%;
                    right: {{ block.settings.tooltip_position_x }}%;
                }
              </style>
            </div>
            <div class="tooltip tooltip-{{ block.id }}">
              <span class="tooltip-text">{{ block.settings.tooltip_text }}</span>
              <span class="line">
              </span>
              <span class="tool-svg-wrap">

                <svg class="opened" width="45" height="45" viewBox="0 0 45 45" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <circle cx="22.5" cy="22.5" r="22.5" fill="black" fill-opacity="0.1"/>
                  <circle cx="22.5" cy="22.5" r="22" stroke="black" stroke-opacity="0.4"/>
                  <circle cx="22.5" cy="22.5" r="7.5" fill="#121111"/>
                </svg>
                <svg class="closed" width="45" height="45" viewBox="0 0 45 45" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <circle cx="22.5" cy="22.5" r="22.5" fill="black" fill-opacity="0.2"></circle>
                  <circle cx="22.5" cy="22.5" r="22" stroke="black" stroke-opacity="0.4"></circle>
                  <circle cx="22.5" cy="22.5" r="3.5" fill="#121111"></circle>
                </svg>
              </span>
            </div>
          {% endcase %}
        {% endfor %}
      </div>
      <div
        class="image-with-text__media second-image image-with-text__media--{{ section.settings.height }} global-media-settings {% if section.settings.image1 != blank %}media{% else %}image-with-text__media--placeholder placeholder{% endif %}{% if section.settings.image_behavior != 'none' %} animate--{{ section.settings.image_behavior }}{% endif %}"
        {% if section.settings.height == 'adapt' and section.settings.image1 != blank %}
          style="padding-bottom: {{ 1 | divided_by: section.settings.image1.aspect_ratio | times: 100 }}%;"
        {% endif %}
      >
        {%- if section.settings.image1 != blank -%}
          {%- if section.settings.image_behavior == 'ambient' or section.settings.image_behavior == 'zoom-in' -%}
            {%- assign widths = '198, 432, 642, 900, 1284, 1800' -%}
            {%- capture sizes -%}
              (min-width: {{ settings.page_width }}px) {{ settings.page_width | minus: 100 | divided_by: 1.6667 }}px,
              (min-width: 750px) calc((100vw - 130px) / 1.667), calc((100vw - 50px) / 1.667)
            {%- endcapture -%}
          {%- else -%}
            {%- assign widths = '165, 360, 535, 750, 1070, 1500' -%}
            {%- capture sizes -%}
              (min-width: {{ settings.page_width }}px) {{ settings.page_width | minus: 100 | divided_by: 2 }}px,
              (min-width: 750px) calc((100vw - 130px) / 2), calc((100vw - 50px) / 2)
            {%- endcapture -%}
          {%- endif -%}
          {{
            section.settings.image1
            | image_url: width: 1500
            | image_tag: loading: 'lazy', sizes: sizes, widths: widths
          }}
        {%- else -%}
          {{ 'detailed-apparel-1' | placeholder_svg_tag: 'placeholder-svg' }}
        {%- endif -%}
        {% for block in section.blocks %}
          {% case block.type %}
            {% when 'second-image-tooltip' %}
              <div class="styles">
                <style>
                  .tooltip-{{ block.id }} {
                      top: {{ block.settings.tooltip_position_y }}%;
                      right: {{ block.settings.tooltip_position_x }}%;
                  }
                </style>
              </div>
              <div class="tooltip tooltip-{{ block.id }}">
                <span class="tooltip-text">{{ block.settings.tooltip_text }}</span>
                <span class="line">
                </span>
                <span class="tool-svg-wrap">
  
                  <svg class="opened" width="45" height="45" viewBox="0 0 45 45" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <circle cx="22.5" cy="22.5" r="22.5" fill="black" fill-opacity="0.1"/>
                    <circle cx="22.5" cy="22.5" r="22" stroke="black" stroke-opacity="0.4"/>
                    <circle cx="22.5" cy="22.5" r="7.5" fill="#121111"/>
                  </svg>
                  <svg class="closed" width="45" height="45" viewBox="0 0 45 45" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <circle cx="22.5" cy="22.5" r="22.5" fill="black" fill-opacity="0.2"></circle>
                    <circle cx="22.5" cy="22.5" r="22" stroke="black" stroke-opacity="0.4"></circle>
                    <circle cx="22.5" cy="22.5" r="3.5" fill="#121111"></circle>
                  </svg>
                </span>
              </div>
          {% endcase %}
        {% endfor %}
      </div>
    </div>
    <div class="image-with-text__text-item grid__item">
      <div
        id="ImageWithText--{{ section.id }}"
        class="image-with-text__content image-with-text__content--{{ section.settings.desktop_content_position }} image-with-text__content--desktop-{{ section.settings.desktop_content_alignment }} image-with-text__content--mobile-{{ section.settings.mobile_content_alignment }} image-with-text__content--{{ section.settings.height }} content-container"
      >
        {%- for block in section.blocks -%}
          {% case block.type %}
          {%- when 'image' -%}
            <img src="{{ block.settings.image | image_url: width: 250 }}" width="{{ block.settings.image.width }}" height="auto" loading="lazy" alt="{{ block.settings.image.alt }}">
            {%- when 'heading' -%}
              {% if block.settings.custom_heading != blank %}
                <h2
                  class="image-with-text__heading inline-richtext {{ block.settings.heading_size }}"
                  {{ block.shopify_attributes }}
                >
                  {{ block.settings.custom_heading }}
                </h2>
              {% else %}
                <h2
                  class="image-with-text__heading inline-richtext {{ block.settings.heading_size }}"
                  {{ block.shopify_attributes }}
                >
                  {{ block.settings.heading }}
                </h2>
              {% endif %}
              
            {%- when 'caption' -%}
              <p
                class="image-with-text__text image-with-text__text--caption {{ block.settings.text_style }} {{ block.settings.text_style }}--{{ block.settings.text_size }} {{ block.settings.text_style }}"
                {{ block.shopify_attributes }}
              >
                {{ block.settings.caption | escape }}
              </p>
            {%- when 'text' -%}
              <div class="image-with-text__text rte {{ block.settings.text_style }}" {{ block.shopify_attributes }}>
                {{ block.settings.text }}
              </div>
            {%- when 'button' -%}
              {%- if block.settings.button_label != blank -%}
                <a
                  {% if block.settings.button_link == blank %}
                    role="link" aria-disabled="true"
                  {% else %}
                    href="{{ block.settings.button_link }}"
                  {% endif %}
                  class="button{% if block.settings.button_style_secondary %} button--secondary{% else %} button--primary{% endif %}"
                  {{ block.shopify_attributes }}
                >
                {% if block.settings.button_svg != blank %}
                  <span class="button-svg">{{ block.settings.button_svg }}</span>
                {% endif %}
                  <span>{{ block.settings.button_label | escape }}</span>
                </a>
              {%- endif -%}
            {%- when 'button-popup' -%}
              {%- if block.settings.button_label != blank -%}
                <button
                  class="video-popup-btn button{% if block.settings.button_style_secondary %} button--secondary{% else %} button--primary{% endif %}"
                  {{ block.shopify_attributes }}
                >
                {% if block.settings.button_svg != blank %}
                  <span class="button-svg">{{ block.settings.button_svg }}</span>
                {% endif %}
                  <span>{{ block.settings.button_label | escape }}</span>
                </button>
                <div class="video-popup">
                  {{
                    block.settings.popup_video_url
                    | video_tag:
                      image_size: '500x',
                      autoplay: true,
                      loop: block.settings.enable_video_looping,
                      controls: true,
                      muted: false
                  }}
                </div>
              {%- endif -%}
          {%- endcase -%}
        {%- endfor -%}
      </div>
    </div>
  </div>
</div>
  
</div>
{% schema %}
{
  "name": "t:sections.double-image-with-text.name",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "t:sections.image-with-text.settings.image.label"
    },
    {
      "type": "image_picker",
      "id": "image_mobile",
      "label": "t:sections.double-image-with-text.settings.image_mobile.label"
    },
    {
      "type": "image_picker",
      "id": "image1",
      "label": "t:sections.image-with-text.settings.image.label"
    },
    {
      "type": "checkbox",
      "label": "t:sections.double-image-with-text.settings.hide_second_image.label",
      "id": "hide_second_image",
      "default": false
    },
    {
      "type": "checkbox",
      "label": "t:sections.double-image-with-text.settings.hide_images_mobile.label",
      "id": "hide_images_mobile",
      "default": false
    },
    {
      "type": "select",
      "id": "height",
      "options": [
        {
          "value": "adapt",
          "label": "t:sections.image-with-text.settings.height.options__1.label"
        },
        {
          "value": "small",
          "label": "t:sections.image-with-text.settings.height.options__2.label"
        },
        {
          "value": "medium",
          "label": "t:sections.image-with-text.settings.height.options__3.label"
        },
        {
          "value": "large",
          "label": "t:sections.image-with-text.settings.height.options__4.label"
        }
      ],
      "default": "adapt",
      "label": "t:sections.image-with-text.settings.height.label"
    },
    {
      "type": "select",
      "id": "desktop_image_width",
      "options": [
        {
          "value": "small",
          "label": "t:sections.image-with-text.settings.desktop_image_width.options__1.label"
        },
        {
          "value": "medium",
          "label": "t:sections.image-with-text.settings.desktop_image_width.options__2.label"
        },
        {
          "value": "large",
          "label": "t:sections.image-with-text.settings.desktop_image_width.options__3.label"
        }
      ],
      "default": "medium",
      "label": "t:sections.image-with-text.settings.desktop_image_width.label",
      "info": "t:sections.image-with-text.settings.desktop_image_width.info"
    },
    {
      "type": "select",
      "id": "layout",
      "options": [
        {
          "value": "image_first",
          "label": "t:sections.image-with-text.settings.layout.options__1.label"
        },
        {
          "value": "text_first",
          "label": "t:sections.image-with-text.settings.layout.options__2.label"
        }
      ],
      "default": "image_first",
      "label": "t:sections.image-with-text.settings.layout.label",
      "info": "t:sections.image-with-text.settings.layout.info"
    },
    {
      "type": "checkbox",
      "label": "t:sections.image-with-text.settings.use_custom_width.label",
      "id": "use_custom_width",
      "default": false
    },
    {
      "type": "range",
      "label": "t:sections.image-with-text.settings.media_grid_width.label",
      "id": "media_grid_width",
      "default": 50,
      "min": 10,
      "max": 100,
      "step": 5,
      "unit": "%"
    },
    {
      "type": "range",
      "label": "t:sections.image-with-text.settings.text_grid_width.label",
      "id": "text_grid_width",
      "default": 50,
      "min": 10,
      "max": 100,
      "step": 5,
      "unit": "%"
    },
    {
      "type": "select",
      "id": "desktop_content_position",
      "options": [
        {
          "value": "top",
          "label": "t:sections.image-with-text.settings.desktop_content_position.options__1.label"
        },
        {
          "value": "middle",
          "label": "t:sections.image-with-text.settings.desktop_content_position.options__2.label"
        },
        {
          "value": "bottom",
          "label": "t:sections.image-with-text.settings.desktop_content_position.options__3.label"
        }
      ],
      "default": "top",
      "label": "t:sections.image-with-text.settings.desktop_content_position.label"
    },
    {
      "type": "select",
      "id": "desktop_content_alignment",
      "options": [
        {
          "value": "left",
          "label": "t:sections.image-with-text.settings.desktop_content_alignment.options__1.label"
        },
        {
          "value": "center",
          "label": "t:sections.image-with-text.settings.desktop_content_alignment.options__2.label"
        },
        {
          "value": "right",
          "label": "t:sections.image-with-text.settings.desktop_content_alignment.options__3.label"
        }
      ],
      "default": "left",
      "label": "t:sections.image-with-text.settings.desktop_content_alignment.label"
    },
    {
      "type": "select",
      "id": "content_layout",
      "options": [
        {
          "value": "no-overlap",
          "label": "t:sections.image-with-text.settings.content_layout.options__1.label"
        },
        {
          "value": "overlap",
          "label": "t:sections.image-with-text.settings.content_layout.options__2.label"
        }
      ],
      "default": "no-overlap",
      "label": "t:sections.image-with-text.settings.content_layout.label"
